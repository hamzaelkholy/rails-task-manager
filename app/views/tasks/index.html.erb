<h1>My tasks</h1>
<% @tasks.each do |task| %>
  <p> <%= link_to task.title, task_path(task)%> </p>
  <%= link_to '<i class="fas fa-trash-alt"></i>'.html_safe, task_path(task), method: :delete, data: { confirm: "Whoa! Are you sure?"} %>
<% end %>

 <p> <%= link_to "+ Add a new task", tasks_new_path  %> </p>
